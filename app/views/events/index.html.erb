<div class="container">
  <div class="jumbotron">

    <p id="notice"><%= notice %></p>

    <h1>Events</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Place</th>
          <th>Description</th>
          <th>Creator</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= link_to "#{event.name}", event %></td>
            <td><%= event.place %></td>
            <td><%= event.description %></td>
            <td><%= event.creator.username %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Event', new_event_path %>

  </div>
</div>